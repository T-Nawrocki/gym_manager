<header class="page-header">
    <h1>Edit Class Details</h1>
</header>

<div class="page-content">

    <form action="/class/<%= @gym_class.id %>/edit" method="post" class="class-form">

        <div>
            <label for="name-input">Name</label>
            <input type="text" id="name-input" name="name" value="<%= @gym_class.name %>" required>
        </div>

        <div>
            <label for="trainer-name-input">Trainer</label>
            <input type="text" id="trainer-name-input" name="trainer_name" value="<%= @gym_class.trainer_name %>" required>
        </div>        
        
        <input type="submit" value="Confirm" class="button">

    </form>

</div>
