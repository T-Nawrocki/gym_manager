<header class="page-header">
    <h1>New Booking</h1>
</header>

<form 
    action="/booking/<%= @member_id %>/<%= @gym_class.id %>" 
    method="post" 
    class="booking-form"
>

    <label for="session-select">Time</label>
    <select name="session_id" id="session-select">
        <option/>
        <% @gym_class.sessions.each do |session| %>
            <option value="<%= session.id %>">
                <%= session.day_display%> <%= session.time %>
            </option>
        <% end %>
    </select>

    <input type="submit" value="Confirm">

</form>
